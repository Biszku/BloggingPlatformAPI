<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/"database_name"</property>
        <property name="hibernate.connection.username">"database_user"</property>
        <property name="hibernate.connection.password">"database_password"</property>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="com.biszku.BloggingPlatformAPI.Post"/>
    </session-factory>
</hibernate-configuration>
